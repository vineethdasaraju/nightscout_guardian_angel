<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/login_main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:weightSum="6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ln1_topDiv_height"
                android:layout_weight="4">

                <com.nightscout.nightscoutga.customviews.ResizableImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/ln1_topImage_padding"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="6"
                    android:orientation="horizontal" >

                    <com.nightscout.nightscoutga.customviews.IEditText1
                        android:id="@+id/login_main1_popup_username_box"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="@dimen/ln1_login_main1_popup_username_box_height"
                        android:background="@drawable/login_et_bkg"
                        android:ems="10"
                        android:hint="@string/ln_login_main1_popup_username_box_hint"
                        android:padding="@dimen/ln1_login_main1_popup_username_box_padding"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey1"
                        android:textCursorDrawable="@drawable/cursor_d"
                        android:textSize="@dimen/ln1_login_main1_popup_username_box_textSize"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/battery15"
                        android:visibility="gone"
                        android:id="@+id/check_status" />


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>