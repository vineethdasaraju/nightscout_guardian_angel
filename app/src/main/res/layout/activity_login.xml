<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#787878" >

        <LinearLayout
            android:id="@+id/login_main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:weightSum="6" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ln1_topDiv_height"
                android:layout_weight="4" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/ln1_topImage_padding"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ln1_bottomDiv_height"
                android:layout_weight="2"
                android:focusableInTouchMode="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/ln_user_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/ln1_labelDiv_marginBottom"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="You are logged in as"
                            android:textColor="@color/white"
                            android:textStyle="italic"/>

                        <TextView
                            android:id="@+id/ln_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:text="You have logged in as"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ln1_login_form_marginLeft"
                        android:layout_marginRight="@dimen/ln1_login_form_marginRight"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="4" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical" >

                            <EditText
                                android:id="@+id/login_main1_popup_username_box"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/ln1_login_main1_popup_username_box_height"
                                android:background="@drawable/login_et_bkg"
                                android:ems="10"
                                android:hint="@string/ln_login_main1_popup_username_box_hint"
                                android:padding="@dimen/ln1_login_main1_popup_username_box_padding"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey1"
                                android:textCursorDrawable="@drawable/cursor_d"
                                android:textSize="@dimen/ln1_login_main1_popup_username_box_textSize"
                                android:textStyle="italic" />


                            <EditText
                                android:id="@+id/login_main1_popup_pwd_box"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/ln1_login_main1_popup_pwd_box_height"
                                android:layout_marginTop="@dimen/ln1_login_main1_popup_pwd_box_marginTop"
                                android:background="@drawable/login_et_bkg"
                                android:ems="10"
                                android:hint="@string/ln_login_main1_popup_pwd_box_hint"
                                android:inputType="textPassword"
                                android:padding="@dimen/ln1_login_main1_popup_pwd_box_padding"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey1"
                                android:textCursorDrawable="@drawable/cursor_d"
                                android:textSize="@dimen/ln1_login_main1_popup_pwd_box_textSize" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/ln1_bottomLinear_paddingLeft" >

                            <RelativeLayout
                                android:id="@+id/action_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/action_button_bkg" >

                                <TextView
                                    android:id="@+id/ac_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@string/ln_ac_label"
                                    android:textColor="#000000"
                                    android:textCursorDrawable="@null"
                                    android:textSize="@dimen/ln1_ac_label_textSize" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/extra_btns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ln1_extra_btns_marginLeft"
                        android:layout_marginRight="@dimen/ln1_extra_btns_marginRight"
                        android:layout_marginTop="@dimen/ln1_extra_btns_marginTop"
                        android:visibility="visible" >

                        <Button
                            android:id="@+id/forgot_pswd"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/ln1_forgot_pswd_height"
                            android:layout_centerHorizontal="true"
                            android:background="#787878"
                            android:paddingRight="@dimen/ln1_forgot_pswd_paddingRight"
                            android:text="@string/forgot_pwd"
                            android:textColor="@drawable/text_color"
                            android:textStyle="italic"
                            android:visibility="visible" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
