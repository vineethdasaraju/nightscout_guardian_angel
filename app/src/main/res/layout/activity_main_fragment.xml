<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nightscout.nightscoutga.UI.Fragments.MainFragmentActivity">

    <FrameLayout
        android:id="@+id/main_frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ListView android:id="@+id/navigation_drawer_listview"
        android:layout_height = "match_parent"
        android:layout_width = "240dp"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/drawer_list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/drawer_listview_selector"
        android:background="@color/drawer_list_background"></ListView>
</android.support.v4.widget.DrawerLayout>
