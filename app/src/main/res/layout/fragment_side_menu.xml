<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nightscout.nightscoutga.UI.Fragments.SideMenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/slide_out_screen_home_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sos_slide_out_screen_home_button_height"
            android:layout_marginTop="@dimen/sos_slide_out_screen_home_button_marginTop"
            android:background="@drawable/abc_cab_background_internal_bg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/slide_out_screen_home_img"
                    android:layout_width="@dimen/sos_slide_out_screen_home_img_width"
                    android:layout_height="@dimen/sos_slide_out_screen_home_img_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sos_slide_out_screen_home_img_marginLeft"
                    android:alpha="0.6"
                    android:src="@drawable/icon_dashboard" />

                <TextView
                    android:id="@+id/slide_out_screen_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sos_slide_out_screen_analytics_marginLeft"
                    android:gravity="center_vertical"
                    android:text="@string/sos_slide_out_screen_Dashboard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sos_slide_out_screen_analytics_textSize" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/slide_out_screen_patients_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sos_slide_out_screen_home_button_height"
            android:layout_marginTop="@dimen/sos_slide_out_screen_home_button_marginTop"
            android:background="@drawable/abc_cab_background_internal_bg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/slide_out_screen_patients_icon"
                    android:layout_width="@dimen/sos_slide_out_screen_home_img_width"
                    android:layout_height="@dimen/sos_slide_out_screen_home_img_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sos_slide_out_screen_home_img_marginLeft"
                    android:alpha="0.6"
                    android:src="@drawable/icon_patients" />

                <TextView
                    android:id="@+id/slide_out_screen_patients_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sos_slide_out_screen_analytics_marginLeft"
                    android:gravity="center_vertical"
                    android:text="@string/sos_slide_out_screen_patients"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sos_slide_out_screen_analytics_textSize" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/slide_out_screen_graphs_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sos_slide_out_screen_home_button_height"
            android:layout_marginTop="@dimen/sos_slide_out_screen_home_button_marginTop"
            android:background="@drawable/abc_cab_background_internal_bg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/slide_out_screen_graphs_img"
                    android:layout_width="@dimen/sos_slide_out_screen_home_img_width"
                    android:layout_height="@dimen/sos_slide_out_screen_home_img_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sos_slide_out_screen_home_img_marginLeft"
                    android:alpha="0.6"
                    android:src="@drawable/icon_graphs" />

                <TextView
                    android:id="@+id/slide_out_screen_graphs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sos_slide_out_screen_analytics_marginLeft"
                    android:gravity="center_vertical"
                    android:text="@string/sos_slide_out_screen_graphs_label"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sos_slide_out_screen_analytics_textSize" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/slide_out_screen_settings_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sos_slide_out_screen_home_button_height"
            android:layout_marginTop="@dimen/sos_slide_out_screen_home_button_marginTop"
            android:background="@drawable/abc_cab_background_internal_bg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/slide_out_screen_settings_img"
                    android:layout_width="@dimen/sos_slide_out_screen_home_img_width"
                    android:layout_height="@dimen/sos_slide_out_screen_home_img_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sos_slide_out_screen_home_img_marginLeft"
                    android:alpha="0.6"
                    android:src="@drawable/icon_settings" />

                <TextView
                    android:id="@+id/slide_out_screen_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/sos_slide_out_screen_analytics_marginLeft"
                    android:gravity="center_vertical"
                    android:text="@string/sos_slide_out_screen_settings_label"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sos_slide_out_screen_analytics_textSize" />
            </LinearLayout>
        </RelativeLayout>


        </LinearLayout>

</ScrollView>
